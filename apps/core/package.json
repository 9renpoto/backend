{
  "name": "@9renpoto/core",
  "version": "0.0.1",
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^6.10.2",
    "@nestjs/core": "^6.10.2",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/platform-fastify": "^6.10.2",
    "@nestjs/swagger": "^4.0.9",
    "@nestjs/terminus": "^6.5.3",
    "@nestjs/typeorm": "^6.2.0",
    "@types/stripe": "^7.13.11",
    "apollo-server-fastify": "^2.9.13",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "graphql": "^14.5.8",
    "nest-raven": "^5.0.0",
    "nestjs-config": "^1.4.4",
    "nestjs-stripe": "^0.2.1",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "stripe": "^7.14.0",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.21",
    "typeorm-naming-strategies": "^1.1.0",
    "typeorm-test-transactions": "^1.3.0",
    "typeorm-transactional-cls-hooked": "^0.1.10"
  },
  "devDependencies": {
    "@nestjs/cli": "6.13.0",
    "@nestjs/testing": "6.10.14",
    "typeorm-factory": "0.0.13"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "tsc -p . --noEmit",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  }
}
