{
  "name": "@9renpoto/core",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.4.0",
    "@nestjs/platform-fastify": "^7.0.0",
    "@nestjs/swagger": "^4.2.10",
    "@nestjs/terminus": "^7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "@types/graphql": "^14.5.0",
    "apollo-server-fastify": "^2.9.16",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "fastify-swagger": "^2.5.0",
    "graphql": "^14.6.0",
    "graphql-relay": "0.6.0",
    "graphql-tag-pluck": "0.8.7",
    "nest-raven": "^6.0.0-alpha.2",
    "nestjs-dataloader": "^7.0.1",
    "nestjs-stripe": "0.4.0",
    "pg": "^8.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "^6.5.4",
    "stripe": "^8.19.0",
    "typedi": "0.8.0",
    "typeorm": "0.2.25",
    "typeorm-naming-strategies": "^1.1.0",
    "typeorm-test-transactions": "^1.9.0",
    "typeorm-transactional-cls-hooked": "0.1.12"
  },
  "devDependencies": {
    "@nestjs/cli": "7.2.0",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.1.1",
    "apollo-server-testing": "2.14.1",
    "typeorm-factory": "0.0.14"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
