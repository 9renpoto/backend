{
  "name": "@9renpoto/backend",
  "author": "github.com/9renpoto",
  "dependencies": {
    "lerna": "^3.19.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "5.5.1",
    "@9renpoto/textlint-config-ja": "5.5.1",
    "@types/jest": "25.1.1",
    "@types/node": "12.12.14",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lerna-changelog": "1.0.0",
    "lint-staged": "10.0.7",
    "prettier-eslint-cli": "5.0.0",
    "supertest": "4.0.2",
    "textlint": "11.6.2",
    "ts-jest": "25.1.0",
    "ts-node": "8.6.2",
    "tsc-watch": "4.1.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{js,jsx,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "private": true,
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/*.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,apps}/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test --stream"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
