{
  "name": "@9renpoto/backend",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/*.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,apps}/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "hasura": "yarn workspace @9renpoto/hasura hasura",
    "test": "lerna run test -- -w 1"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.3.0",
    "@9renpoto/textlint-config-ja": "7.3.0",
    "@9renpoto/tsconfig": "7.3.0",
    "@types/faker": "5.1.6",
    "@types/jest": "26.0.20",
    "eslint": "7.19.0",
    "faker": "5.3.1",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.3.0",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "textlint": "11.8.2",
    "ts-jest": "26.5.0",
    "ts-node": "9.1.1",
    "tsc-watch": "4.2.9",
    "tsconfig-paths": "3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,yml}": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "graphql": "^15.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
