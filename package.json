{
  "name": "@9renpoto/backend",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "coverage": "mkdir coverage && lcov-result-merger '{packages,apps}/*/coverage/lcov.info' > coverage/lcov.info",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/*.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,apps}/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test -- -w 1"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.0.3",
    "@9renpoto/textlint-config-ja": "7.0.3",
    "@types/faker": "5.1.2",
    "@types/jest": "26.0.14",
    "eslint": "7.10.0",
    "faker": "5.1.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lcov-result-merger": "3.1.0",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.1.0",
    "rimraf": "3.0.2",
    "supertest": "5.0.0",
    "textlint": "11.7.6",
    "ts-jest": "26.4.0",
    "ts-node": "9.0.0",
    "tsc-watch": "4.2.9",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
