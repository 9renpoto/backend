{
  "name": "@9renpoto/backend",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/*.md packages/**/*.md",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,apps}/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test -- -w 1"
  },
  "dependencies": {
    "lerna": "3.20.2",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "5.5.1",
    "@9renpoto/textlint-config-ja": "5.5.1",
    "@types/jest": "25.1.4",
    "@types/faker": "4.1.10",
    "eslint": "6.8.0",
    "faker": "4.1.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "prettier-eslint-cli": "5.0.0",
    "prettier-plugin-package": "0.3.1",
    "supertest": "4.0.2",
    "textlint": "11.6.3",
    "ts-jest": "25.2.1",
    "ts-node": "8.7.0",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write"
    ],
    "*.{js,jsx,md,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
